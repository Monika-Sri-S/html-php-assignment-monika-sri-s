<?php
$path = "/home/user/documents/report.pdf";
$filename = basename($path);
$filenameWithoutExt = pathinfo($path, PATHINFO_FILENAME);
$fileExtension = pathinfo($path, PATHINFO_EXTENSION);
$directory = pathinfo($path, PATHINFO_DIRNAME);
echo "File Path: $path\n";
echo "Full File Name: $filename\n";
echo "File Name without Extension: $filenameWithoutExt\n";
echo "File Extension: $fileExtension\n";
echo "Directory: $directory\n";
?>
output:
File Path: /home/user/documents/report.pdf
Full File Name: report.pdf
File Name without Extension: report
File Extension: pdf
Directory: /home/user/documents
